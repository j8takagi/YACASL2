;;; 複数のWORD値の中から、最小値を返す
;;; 入力: GR1: WORD値を格納したアドレス GR2: 値の個数
;;; 出力: GR0: 最小値
MINIM   START
        RPUSH
        LD      GR0,0,GR1
        ST      GR0,MIN
        LAD     GR3,0
S1      CPA     GR3,GR2
        JZE     RET
        LAD     GR1,1,GR1
        LD      GR0,0,GR1
        CPA     GR0,MIN
        JPL     S2
        JZE     S2
        ST      GR0,MIN
S2      LAD     GR3,1,GR3
        JUMP    S1
RET     LD      GR0,MIN
        RPOP
        RET
MIN     DS      1
        END
